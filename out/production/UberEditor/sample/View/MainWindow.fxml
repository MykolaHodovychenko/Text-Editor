<StackPane fx:id="stackPane" prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/8.0.121" xmlns:fx="http://javafx.com/fxml/1" fx:controller="sample.Controller.GeneralController">
<children>
    <VBox prefHeight="200.0" prefWidth="100.0">
        <children>
            <MenuBar>
                <menus>
                    <Menu mnemonicParsing="false" text="Файл">
