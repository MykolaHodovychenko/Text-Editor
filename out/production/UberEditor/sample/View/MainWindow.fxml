                            <MenuItem fx:id="create" mnemonicParsing="false" text="Создать" />
                            <MenuItem fx:id="open" mnemonicParsing="false" text="Открыть..." />
                            <MenuItem fx:id="save" mnemonicParsing="false" text="Сохранить" />
                            <MenuItem fx:id="saveAs" mnemonicParsing="false" text="Сохранить как..." />
                            <SeparatorMenuItem mnemonicParsing="false" />
                            <MenuItem fx:id="exit" mnemonicParsing="false" text="Выход" />
                        </items>
                    </Menu>
                    <Menu mnemonicParsing="false" text="Правка">
                        <items>
                            <MenuItem fx:id="undo" mnemonicParsing="false" text="Отменить" />
                            <SeparatorMenuItem mnemonicParsing="false" />
                            <MenuItem fx:id="cut" mnemonicParsing="false" text="Вырезать" />
                            <MenuItem fx:id="copy" mnemonicParsing="false" text="Копировать" />
                            <MenuItem fx:id="paste" mnemonicParsing="false" text="Вставить" />
                            <MenuItem fx:id="delete" mnemonicParsing="false" text="Удалить" />
