                        </items>
                    </Menu>
                    <Menu mnemonicParsing="false" text="Вид">
                        <items>
                            <MenuItem mnemonicParsing="false" text="Строка состояния" />
                        </items>
                    </Menu>
                    <Menu mnemonicParsing="false" text="Справка">
                        <items>
                            <MenuItem fx:id="about" mnemonicParsing="false" text="О программе" />
                        </items>
                    </Menu>
                </menus>
            </MenuBar>
            <TextArea fx:id="text" prefHeight="375.0" prefWidth="634.0" />
        </children>
    </VBox>
</children>
